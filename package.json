{
  "name": "flowpost",
  "version": "1.0.0",
  "description": "AI-Powered Social Media Automation Platform - Automate content discovery, image generation, and posting to Instagram, Twitter, and LinkedIn.",
  "packageManager": "yarn@1.22.22",
  "main": "backend/agents/content-automation/index.ts",
  "author": "LangChain",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "yarn langgraph:in_mem:up",
    "build": "tsc",
    "clean": "rm -rf dist",
    "format": "prettier --write .",
    "lint": "eslint backend",
    "lint:fix": "eslint backend --fix",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "lint:langgraph-json": "node scripts/checkLanggraphPaths.js",
    "start:auth": "yarn tsx backend/clients/auth-server.ts",
    "generate_post": "yarn tsx scripts/generate-post.ts",
    "cron:create": "yarn tsx scripts/crons/create-cron.ts",
    "cron:delete": "yarn tsx scripts/crons/delete-cron.ts",
    "cron:list": "yarn tsx scripts/crons/list-crons.ts",
    "graph:backfill": "yarn tsx scripts/backfill.ts",
    "get:scheduled_runs": "yarn tsx scripts/get-scheduled-runs.ts",
    "get:used_links": "yarn tsx scripts/get-all-used-links.ts",
    "graph:delete:run_thread": "yarn tsx scripts/delete-run-thread.ts",
    "langgraph:up": "langgraph up --watch --port 54367",
    "langgraph:in_mem:up": "npx @langchain/langgraph-cli@latest dev --port 54367",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "prepare": "husky"
  },
  "dependencies": {
    "@arcadeai/arcadejs": "^1.0.0",
    "@google/genai": "^1.30.0",
    "@googleapis/youtube": "^20.0.0",
    "@langchain/anthropic": "^1.0.0",
    "@langchain/community": "^1.0.2",
    "@langchain/core": "^1.0.4",
    "@langchain/google-genai": "^2.0.0",
    "@langchain/google-vertexai-web": "^1.0.0",
    "@langchain/langgraph": "^1.0.2",
    "@langchain/langgraph-sdk": "1.0.0",
    "@langchain/openai": "^1.1.0",
    "@mendable/firecrawl-js": "^1.10.1",
    "@octokit/rest": "^21.0.2",
    "@slack/web-api": "^7.7.0",
    "@supabase/supabase-js": "^2.47.10",
    "@types/snoowrap": "^1.19.0",
    "cheerio": "^1.0.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "file-type": "^19.6.0",
    "google-auth-library": "^9.15.0",
    "instagram-private-api": "^1.46.1",
    "langsmith": "0.3.49",
    "moment": "^2.30.1",
    "passport": "^0.7.0",
    "passport-twitter": "^1.0.4",
    "playwright": "^1.57.0",
    "sharp": "^0.34.5",
    "snoowrap": "^1.23.0",
    "twitter-api-v2": "^1.18.2",
    "uuid": "^11.0.4",
    "xml2js": "^0.6.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.9.1",
    "@playwright/test": "^1.57.0",
    "@tsconfig/recommended": "^1.0.7",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.6",
    "@types/passport": "^1.0.17",
    "@types/passport-twitter": "^1.0.40",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-no-instanceof": "^1.0.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.11",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "backend/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "frontend/**/*.{ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
