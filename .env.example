# ===========================================
# FlowPost Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# -------------------------------------------
# REQUIRED: AI & Content Discovery
# -------------------------------------------
OPENAI_API_KEY=sk-your_openai_api_key_here
SERPER_API_KEY=your_serper_api_key_here

# -------------------------------------------
# REQUIRED: Database (Supabase)
# -------------------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# -------------------------------------------
# REQUIRED: Authentication (Clerk)
# -------------------------------------------
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# -------------------------------------------
# OPTIONAL: LangChain Monitoring
# -------------------------------------------
# LANGCHAIN_API_KEY=your_langchain_api_key
# LANGSMITH_TRACING_V2=true
# LANGCHAIN_PROJECT=flowpost

# -------------------------------------------
# OPTIONAL: Model Configuration
# -------------------------------------------
# AI_PROVIDER=openai  # or 'gemini'
# LLM_MODEL=gpt-4o
# IMAGE_MODEL=dall-e-3

# For Gemini (alternative to OpenAI):
# GOOGLE_API_KEY=your_google_api_key

# -------------------------------------------
# OPTIONAL: Platform Credentials
# (Can also be configured via UI)
# -------------------------------------------
# Instagram
# INSTAGRAM_USERNAME=your_username
# INSTAGRAM_PASSWORD=your_password

# Twitter/X
# TWITTER_API_KEY=your_twitter_api_key
# TWITTER_API_SECRET=your_twitter_api_secret
# TWITTER_ACCESS_TOKEN=your_twitter_access_token
# TWITTER_ACCESS_SECRET=your_twitter_access_secret

# LinkedIn
# LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# -------------------------------------------
# OPTIONAL: Development
# -------------------------------------------
# NODE_ENV=development
# LANGGRAPH_API_URL=http://localhost:54367
